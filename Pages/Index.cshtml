@page
@model IOTA.Pages.SignLogModel
@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <title>SMARTCITY IOT SIGNUP </title>
    <link rel="stylesheet" href="~/css/loginSignupStyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form id="sign-up" method="post">
                <h1>Create Account</h1>
                <span>Please fill in all fields</span>
                <input type="text" placeholder="Name" asp-for="login.Name" required>
                <input type="email" placeholder="Email" asp-for="login.Email" required>
                <input type="password" placeholder="Password" asp-for="login.Password" required>
                <input type="text" name="actiontype" value="sign-up" hidden />
                <button type="submit">SignUp</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form id="sign-in" method="post">
                <h1>Sign In</h1>

                <span>Please fill in all fields</span>
                <input type="email" placeholder="Email" asp-for="signIn.Email" required>
                <input type="password" placeholder="Password" asp-for="signIn.Password" required>
                <a href="#">Forgot Your Password?</a>
                <input type="text" name="actiontype" value="sign-in" hidden />
                <button type="submit">Sign In</button>

            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>New user? Sign up here</h1>
                    <p>Enter your details to create an account</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });
        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });</script>


</body>
</html>